

@using AntDesign.Icons
@inject IJSRuntime JSRuntime

@code {
    protected override void OnInitialized()
    {
        JSRuntime.InvokeVoidAsync("run_matrix");
    }
}

<section id="code">
    <div class="container mx-auto">
        <div id="code_panel" class="p-4">
            <h3 class="text-2xl my-3">Code</h3>
            <hr class="rule" />
            <ul id="code_list" class="grid grid-cols-1 p-4 gap-4 md:grid-cols-3 max-w-xl mx-auto">
                <li>
                    <a href="/repos" class="btn">
                        <GithubOutlined /> <span>View Repos</span>
                    </a>
                </li>
                <li>
                    <a href="/contribute" class="btn">
                        <MergeOutlined /> <span>Contribute</span>
                    </a>
                </li>
                <li>
                    <a href="/build" class="btn">
                        <ForkOutlined /> <span>Build</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</section>

<script src="/js/matrix.js" type="text/javascript"></script>
