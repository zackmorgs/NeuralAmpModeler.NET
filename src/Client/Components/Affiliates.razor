<section id="affiliates">
    <div class="container mx-auto">
        <div class="py-8 px-4">
            <h2 class="text-2xl text-center mb-4">Affiliates</h2>
            <hr class="rule" />
            <ul id="affiliate_list" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 mt-4 p-4">
                @foreach (var affiliate in affiliates)
                {
                    <li class="affiliate-item">
                        <a class="affiliate" href="@affiliate.URL" target="_blank" rel="noopener noreferrer">
                            <img class="affiliate-img" src="@affiliate.Image" alt="@affiliate.Name" />
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>
</section>