    }

    private List<Affiliate> affiliates = new List<Affiliate>();

    protected override void OnInitialized()
    {
        affiliates = new List<Affiliate>
{
new Affiliate { Name = "Audio Assault", URL = "https://www.audio-assault.com", Image =
"img/affiliates/audio-assault.webp" },
new Affiliate { Name = "Dime Head", URL = "https://dimehead.de/", Image = "img/affiliates/dime-head.webp" },
new Affiliate { Name = "Mod.Audio", URL = "https://mod.audio/", Image = "img/affiliates/dwarf-mod.webp" },
new Affiliate { Name = "Gigfast", URL = "https://mod.audio/", Image = "img/affiliates/gigfast.webp" },
new Affiliate { Name = "Melda", URL = "https://www.meldaproduction.com/", Image = "img/affiliates/melda.webp" },
new Affiliate { Name = "Poly Effects", URL = "https://www.polyeffects.com/", Image = "img/affiliates/poly.webp" },
new Affiliate { Name = "Solemn Tones", URL = "https://solemntones.com/", Image = "img/affiliates/solemn-tones.webp" },
new Affiliate { Name = "ToneHunt.org", URL = "https://tonehunt.org/", Image = "img/affiliates/tone-hunt.webp" },
new Affiliate { Name = "Two Notes", URL = "https://www.two-notes.com/en/genome/", Image =
"img/affiliates/two-notes.webp" },
new Affiliate { Name = "Urgitone", URL = "https://ugritone.com/", Image = "img/affiliates/urgitone.webp" },
