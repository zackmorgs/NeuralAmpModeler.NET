@rendermode InteractiveWebAssembly

@code {
    public double Input { get; set; } = 0.0;
    public double Gate { get; set; } = -80.0;
    public double Bass { get; set; } = 5.0;
    public double Middle { get; set; } = 5.0;
    public double Treble { get; set; } = 5.0;
    public double Output { get; set; } = 0.0;
    public bool GateIsOn { get; set; } = true;
    public bool EQisOn { get; set; } = false;
    public bool NormalizeIsOn { get; set; } = false;
}

<div class="amp-modeler">
    <div class="nam-content">
        <h2 class="title">NEURAL AMP MODELER</h2>
        <div class="control hiddens">
            <div class="control hidden">
                <label>Input</label>
                <input type="range" min="-20.0" max="20.0" step="0.01" @bind="Input" class="knob" />
                <span class="value">@Input dB</span>
            </div>
            <div class="control hidden">
                <label>Gate</label>
                <input type="range" min="-100.0" max="0.0" step="0.01" @bind="Gate" class="knob" />
                <span class="value">@Gate dB</span>
            </div>
            <div class="control hidden">
                <label>Bass</label>
                <input type="range" min="0.0" max="10" step="0.01" @bind="Bass" class="knob" />
                <span class="value">@Bass</span>
            </div>
            <div class="control hidden">
                <label>Middle</label>
                <input type="range" min="0" max="10" step="0.01" @bind="Middle" class="knob" />
                <span class="value">@Middle</span>
            </div>
            <div class="control hidden">
                <label>Treble</label>
                <input type="range" min="0" max="10" step="0.01" @bind="Treble" class="knob" />
                <span class="value">@Treble</span>
            </div>
            <div class="control hidden">
                <label>Output</label>
                <input type="range" min="-40" max="40.0" step="0.01" @bind="Output" class="knob" />
                <span class="value">@Output dB</span>
            </div>
        </div>
        <div class="switches">
            <label class="switch">
                <input type="checkbox" @bind="GateIsOn">
                <span class="slider"></span>
            </label>
            <label class="switch">
                <input type="checkbox" @bind="EQisOn">
                <span class="slider"></span>
            </label>
            <label class="switch">
                <input type="checkbox" @bind="NormalizeIsOn">
                <span class="slider"></span>
            </label>


        </div>
        <div class="file-inputs">
            <div class="input-group relative">
                <img class="icon icon-folder" src="/svg/nam-folder-icon.svg" />
                <input class="nam-file-input" type="text" value="5150.nam" readonly>
                <button class="clear-button">✕</button>
            </div>
            <div class="input-group relative">
                <img class="icon icon-folder" src="/svg/nam-folder-icon.svg" />
                <input class="nam-file-input" type="text" value="Select IR..." readonly>
                <button class="clear-button">✕</button>
            </div>
        </div>
    </div>
</div>
